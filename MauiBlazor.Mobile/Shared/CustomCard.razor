@using MauiBlazor.Shared.Models;

<style>
    .customCard {
        flex: 1 0 100%;
        width: 100%;
        height: 150px ;
        margin-right: 15px;
        margin-bottom: 15px; /* Add vertical padding */
        perspective: 1px;
        border-radius: 15px; /* Set border radius */
        padding: 15px; /* Add padding on all sides */
        background-color: #C0D8C0;
        h3

    {
        font-weight: bold;
    }

    h4 {
        color: #5E5B67;
        font-weight: bold;
    }

    h5 {
        color: #322F40;
        font-weight: bold;
    }
    .empty-box {
        width: 100%;
        height: 25px;
    }
    
</style>

<div class="customCard" style="background-color: @CardModel.CardBgColor;" @onclick="@(() => CardClicked())">
    <div class="card-body">
        <h3 style="color: black;">@CardModel.DisplayName</h3>
        <h4 style="color: #5E5B67;">@CardModel.JobTitle</h4>
        <div class="empty-box"></div>
        <h4 style="color: #322F40;">@CardModel.WebsiteUrl</h4> 
    </div>
</div>

@code {
    [Parameter]
    public CardModel CardModel { get; set; }

    [Parameter]
    public EventCallback<int>
    OnCardClick
    { get; set; }

    private async Task CardClicked()
    {
        await OnCardClick.InvokeAsync(@CardModel.Id);
    }
}
